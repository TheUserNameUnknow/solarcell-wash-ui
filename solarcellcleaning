<script>
  // ------- CONFIG ที่อยากแก้เปอร์เซ็นต์แบตได้ง่าย ๆ --------
  const batteryA = 100; // เปอร์เซ็นต์เริ่มต้น
  const batteryB = 100;

  // ตั้งค่าเริ่มต้น UI (เริ่มแบบ OFFLINE)
  const badge = document.getElementById('statusBadge');
  const washSwitch = document.getElementById('washSwitch');
  const washText = document.getElementById('washText');
  const washDot  = document.getElementById('washDot');

  // อัปเดตแบตตามค่า config
  function setBattery(idFill, idPct, value){
    const v = Math.max(0, Math.min(100, Number(value) || 0));
    document.getElementById(idFill).style.width = v + '%';
    document.getElementById(idPct).textContent = v.toFixed(0);
  }
  setBattery('fillA', 'pctA', batteryA);
  setBattery('fillB', 'pctB', batteryB);

  // ฟังก์ชันสลับสถานะ Online/Offline ตามสวิตช์ Wash
  function syncStatus(){
    const isOn = washSwitch.checked;

    // ตัวหนังสือและจุดบอกสถานะของแถว Wash
    washText.textContent = isOn ? 'ON' : 'OFF';
    washDot.classList.toggle('on', isOn);

    // ป้ายสถานะด้านบน
    if(isOn){
      badge.textContent = 'Online';
      badge.classList.remove('offline');
      badge.classList.add('online');
    }else{
      badge.textContent = 'Offline';
      badge.classList.remove('online');
      badge.classList.add('offline');
    }
  }
  // initial render once
  syncStatus();

  // เมื่อผู้ใช้กดสวิตช์
  washSwitch.addEventListener('change', syncStatus);
</script>
</body>
